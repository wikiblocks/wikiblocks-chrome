{
  "manifest_version": 2,

  "name": "wiki.bl.ocks",
  "description": "This extension helps you find blocks that are related to a Wikipedia page.",
  "version": "1.0",
	"content_scripts": [
		{
    	"matches": ["https://*.wikipedia.org/wiki/*", "https://*.wikibooks.org/wiki/*"],
      // "exclude_matches": ["https://*.wikipedia.org/wiki/Main_Page", "https://en.wikipedia.org/wiki/*:*"],
			"js": ["d3.js", "wikipedia.js"],
      "css": ["wikipedia.css"],
      "run_at": "document_end"
		},
    {
      "matches": ["http://bl.ocks.org/*/*"],
      "js": ["d3.js", "blocks.js"],
      "css": ["blocks.css"],
      "run_at": "document_end"
    }
	],
  "background": {
    "scripts": ["xhr.js", "eventPage.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_popup": "popup.html",
    "default_title": "wiki.bl.ocks"
  },
  "permissions": [
    "activeTab",
    "http://127.0.0.1:3000/*", 
    "http://wikiblocksalpha.elasticbeanstalk.com/*"
  ],
  "icons": {
            "19": "images/icon19_orange.png",
            "38": "images/icon38_orange.png",
            "48": "images/icon48_orange.png",
            "64": "images/icon64_orange.png",
            "128": "images/icon128_orange.png"
  }
}